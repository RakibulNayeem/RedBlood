<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8AEEC5"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username : "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/signInusernameEditTextId"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/signInPasswordEditTextId"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <Button
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Sign In"
        android:id="@+id/signInButtonId"
        android:layout_marginTop="20dp"
        android:background="#059657"
        android:layout_marginRight="40dp"
        style="@style/Widget.AppCompat.Button.Colored"
        />


    <Button
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Skip"
        android:id="@+id/skipButtonId"
        android:layout_marginTop="20dp"
        android:background="#059657"
        style="@style/Widget.AppCompat.Button.Colored"
        />

</LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Sign Up Here "
        android:id="@+id/signUpHereButtonId"
        android:layout_marginTop="20dp"
        android:background="#059657"
        style="@style/Widget.AppCompat.Button.Colored"
        />

</LinearLayout>